@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var processing = "text-primary";
    var pending = "text-primary";
    var completed = "text-primary";
    var rejected = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "Processing":
            processing = "active text-white";
            break;
        case "Pending":
            pending = "active text-white";
            break;
        case "Completed":
            completed = "active text-white";
            break;
        case "Rejected":
            rejected = "active text-white";
            break;
        default:
            all = "active text-white";
            break;
    }
}

<br />
<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a asp-controller="Orders" asp-action="Index" asp-route-status="Processing" style="text-decoration:none;">
                    <li class="list-group-item @processing">Processing</li>
                </a>
                <a asp-controller="Orders" asp-action="Index" asp-route-status="Payment Pending" style="text-decoration:none;">
                    <li class="list-group-item @pending">Pending</li>
                </a>
                <a asp-controller="Orders" asp-action="Index" asp-route-status="Completed" style="text-decoration:none;">
                    <li class="list-group-item @completed">Completed</li>
                </a>
                <a asp-controller="Orders" asp-action="Index" asp-route-status="Rejected" style="text-decoration:none;">
                    <li class="list-group-item @rejected">Rejected</li>
                </a>
                <a asp-controller="Orders" asp-action="Index" asp-route-status="All" style="text-decoration:none;">
                    <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>

    <br /><br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Order Status</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
<script src="~/js/orders.js"></script>
}